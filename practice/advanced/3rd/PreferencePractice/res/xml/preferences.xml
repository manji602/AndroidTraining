<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- グループ分けされます -->
    <PreferenceCategory
        android:key="pref_key_storage_settings"
        android:title="新着のお知らせ" >
        <CheckBoxPreference
            android:key="new_notification_settings"
            android:title="新着お知らせの設定" />
    </PreferenceCategory>

    <!-- グループ分けされます -->
    <PreferenceCategory
        android:key="pref_key_storage_settings"
        android:title="連絡先" >
        <CheckBoxPreference
            android:key="address_sync_settings"
            android:title="連絡先の同期設定" />
        <ListPreference
            android:defaultValue="0"
            android:dependency="address_sync_settings"
            android:dialogTitle="自動同期の間隔"
            android:entries="@array/auto_sync_interval"
            android:entryValues="@array/auto_sync_interval_value"
            android:key="auto_sync_interval_settings"
            android:title="自動同期の間隔" />
    </PreferenceCategory>

</PreferenceScreen>